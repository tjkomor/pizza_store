<div class="container mt-5">
  <h1 class="mb-4">Edit Pizza</h1>

  <%= form_with(model: @pizza, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, 'Pizza Name' %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :topping_ids, 'Toppings' %>
      <% @toppings.each do |topping| %>
        <div class="form-check">
          <%= check_box_tag 'pizza[topping_ids][]', topping.id, @pizza.toppings.exists?(topping.id), class: 'form-check-input' %>
          <%= label_tag "pizza_topping_#{topping.id}", topping.name, class: 'form-check-label' %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Pizza", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
