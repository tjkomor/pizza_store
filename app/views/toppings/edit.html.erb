<div class="container mt-5">
  <% if flash[:notice] %>
    <div class="alert alert-danger">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <h1 class="mb-4">Edit Topping</h1>

  <div class="mb-3">
    <%= link_to 'Menu', '/', class: 'btn btn-secondary' %>
    <%= link_to 'Pizza Manager', toppings_path, class: 'btn btn-primary' %>
    <%= link_to 'Toppings Manager', toppings_path, class: 'btn btn-primary' %>
  </div>

  <%= form_with(model: @topping, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, 'Topping Name' %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.check_box :in_stock, class: "form-check-input" %>
      <%= form.label :in_stock, 'In Stock', class: "form-check-label" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Topping", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
