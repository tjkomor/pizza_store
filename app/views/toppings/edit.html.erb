<div class="container mt-5">
  <h1 class="mb-4">Edit Topping</h1>

  <%= form_with(model: @topping, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, 'Topping Name' %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.check_box :in_stock, class: "form-check-input" %>
      <%= form.label :in_stock, 'In Stock', class: "form-check-label" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Topping", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
