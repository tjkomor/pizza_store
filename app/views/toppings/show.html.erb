<div class="container mt-5">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <div class="card">
    <div class="card-header">
      Topping Details
    </div>
    <div class="card-body">
      <p>
        <strong>Name:</strong>
        <%= @topping.name %>
      </p>

      <div class="text-center">
        <%= link_to 'Menu', '/', class: 'btn btn-secondary' %>
        <%= link_to 'Pizza Manager', pizzas_path, class: 'btn btn-secondary' %>
        <%= link_to 'Topping Manager', toppings_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
